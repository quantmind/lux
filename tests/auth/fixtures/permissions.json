    "permissions": [
        {
            "name": "view-users",
            "description": "View users",
            "policy": [
                {
                    "resource": ["users:*"],
                    "action": ["read"]
                },
                {
                    "resource": [
                        "users:*:groups",
                        "users:*:superuser"
                    ],
                    "action": ["*"],
                    "effect": "deny"
                }
            ]
        },
        {
            "name": "read-secrets-users-groups",
            "policy": [
                {
                    "resource": [
                        "secrets:*",
                        "users:*",
                        "groups:*"
                    ],
                    "action": ["read"]
                }
            ]
        },
        {
            "name": "policy-maker",
            "policy": [
                {
                    "resource": "permissions:*",
                    "action": ["read", "create", "update"]
                }
            ]
        }
    ],
    "groups": [
        {
            "name": "users",
            "permissions": ["view-users"]
        },
        {
            "name": "power-users",
            "permissions": ["read-secrets-users-groups"]
        },
        {
            "name": "policy-makers",
            "permissions": ["policy-maker"]
